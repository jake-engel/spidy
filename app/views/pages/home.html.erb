<div class="home-wrapper">
  <div class="home-page-container">
    <div class="banner">
      <div class="banner-content">
        <h1>spidy</h1>
        <p>Find nearby freelancer professionals<br>to solve your problems.</p>
        <div class="search-box">
          <div class="search-container">
            <span class="icon"><i class="fa fa-search"></i></span>
            <input type="search" class="search-bar" placeholder="What are you looking for?" />
            <ul id="results" class="dropdown-menu dropdown-menu-right navbar-spidy-dropdown-menu"></ul>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="banner-mp" style="background-image: linear-gradient(-225deg, rgba(0,30,40,0.6) 0%, rgba(0,5,0,0.6) 50%), url('http://res.cloudinary.com/djf9mipph/image/upload/v1511256314/banner_home_top-min_ba5tzu.jpg');">
    <div class="mp-container">
      <div class="banner-mp-content">
        <h1><span>The biggest world</span></h1>
        <h1><span>professionals</span></h1>
        <h1><span>community</span></h1>
        <h2> - </h2>
        <p>wherever and whenever you want.</p>
    </div>
  </div>
</div>
<div class="first-card-wrapper">
  <div class="home-page-container">
    <div class="card">
      <%= image_tag "Design_page-05.svg" %>
    </div>
    <div class="text-card">
      <p>Find your professional profile<br>
        closest to your location and pay it at hourly rate<br>
      for service rended </p>
      <h2><span>GEOLOCALIZATION // SECURE PAYMENTS</span></h2>
    </div>
  </div>
</div>


<div class="maps-wrapper">
  <div class="home-page-container">
    <div class="maps" id="home-map">
      See local professionals near you!
    </div>
    <div class="maps-search-box">
      <div class="search-container">

        <form id="home-map-search">
          <input type="text" id="home-search-bar" class="search-bar" onFocus="geolocate()" placeholder="Where are you looking for?" />
          <span class="icon" type="submit" id="home-search-map-submit"><i class="fa fa-search"></i></span>
        </form>
      </div>
    </div>
    <div class="hr"><hr /></div>
  </div>
</div>



<div class="second-cards-wrapper">
  <div class="home-page-container">

    <div class="col-xs-12 col-sm-4">
      <div class="s-card">
        <%= image_tag "Design_page-06.svg" %>
      </div>
      <div class="text-card">
        <p>A network of <br> verified professionals </p>
        <h2><span>PROFILE VERIFICATION</span></h2>
      </div>
    </div>

    <div class="col-xs-12 col-sm-4">
      <div class="p-card">
        <%= image_tag "Design_page-08.svg" %>
      </div>
    </div>

    <div class="col-xs-12 col-sm-4">
      <div class="s-card">
        <%= image_tag "Design_page-07.svg" %>
      </div>
      <div class="text-card">
        <p>A classic of professional <br>
          build on the Popularity Ranking Algorithm </p>
        <h2><span>QUALITY//RECENCY//QUANTITY</span></h2>
      </div>
    </div>
  </div>
</div>

<div class="bottom-banner">
  <div class="banner-content">
    <div class="home-page-container">
        <h1><span>The biggest world</span></h1>
        <h1><span>professionals</span></h1>
        <h1><span>community</span></h1>
        <h2> - </h2>
        <p>wherever and whenever you want.</p>
    <a class="btn btn-primary btn-lg">Start now</a>
    </div>
  </div>
</div>
<div class="line">
<div class="home-page-container">
    <div class="hr"><hr /></div>
</div>
</div>

<%= content_for(:after_js) do %>
 <script src="https://maps.googleapis.com/maps/api/js?key=<%= ENV["GOOGLE_ID"] %>&libraries=places&callback=initAutocomplete"
        async defer></script>
<% end %>
